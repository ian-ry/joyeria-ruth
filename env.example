# Variables de entorno para Joyería Ruth
# Copia este archivo como .env.local y configura tus valores

# Base de datos Vercel Postgres
POSTGRES_URL="postgresql://username:password@host:port/database"
POSTGRES_PRISMA_URL="postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:port/database"
POSTGRES_USER="username"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# Configuración de la aplicación
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Configuración de email (opcional para notificaciones)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Configuración de WhatsApp (opcional)
WHATSAPP_API_URL="https://api.whatsapp.com/send"
WHATSAPP_PHONE_NUMBER="+521234567890"

# Configuración de seguridad
JWT_SECRET="your-jwt-secret-key"
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"
